<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:fresco="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="170dp">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/drawer_header_blur_image"
        android:layout_width="match_parent"
        android:layout_height="170dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:background="@drawable/gradient_overlay" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/drawer_user_portrait_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        fresco:roundAsCircle="true" />

    <TextView
        android:id="@+id/drawer_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/drawer_user_portrait_image"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/drawer_user_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/drawer_user_name"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="@android:color/white" />
</RelativeLayout>