<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:fresco="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:paddingBottom="@dimen/activity_vertical_margin"
              android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/shot_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:text="title"
        android:textAppearance="@style/AppTheme.TextAppearance" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/shot_item_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/colorAccent" />
        <TextView
            android:id="@+id/shot_item_gif_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:padding="5dp"
            android:visibility="gone"
            android:text="GIF"
            android:textAppearance="@style/AppTheme.TextAppearance" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@color/colorAccent" />

        <TextView
            android:id="@+id/shot_item_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:drawableLeft="@color/colorAccent"
            android:text="100"
            android:textAppearance="@style/AppTheme.TextAppearance" />

        <TextView
            android:id="@+id/shot_item_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@id/shot_item_like"
            android:drawableLeft="@color/colorAccent"
            android:text="100"
            android:textAppearance="@style/AppTheme.TextAppearance" />

        <TextView
            android:id="@+id/shot_item_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@id/shot_item_msg"
            android:drawableLeft="@color/colorAccent"
            android:text="100"
            android:textAppearance="@style/AppTheme.TextAppearance" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/shot_item_author_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="5dp"
            fresco:roundAsCircle="true" />

        <TextView
            android:id="@+id/shot_item_author_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="author name"
            android:textAppearance="@style/AppTheme.TextAppearance" />
    </LinearLayout>
</LinearLayout>